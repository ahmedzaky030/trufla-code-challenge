{
  "controls": [
    {
      "type": "text",
      "name": "firstName",
      "label": " First Name",
      "initialValue": "John Doe",
      "placeholder": "Type your First name"
    },
    {
      "type": "number",
      "name": "age",
      "label": "Age",
      "initialValue": "",
      "placeholder": "Type your Age"
    },
    {
      "type": "date",
      "name": "dob",
      "label": " Date of Birth",
      "placeholder": "Type your Date of birth"
    },
    {
      "type": "email",
      "name": "email",
      "label": " Email",
      "initialValue": "abc@example",
      "placeholder": "Type your email"
    },
    {
      "type": "radio",
      "name": "maritalStatus",
      "label": " Marital Status",
      "placeholder": "",
      "options": [
        { "id": "m", "text": "Male" },
        { "id": "f", "text": "Female" }
      ]
    },
    {
      "type": "checkbox",
      "name": "workType",
      "label": " Work Type",
      "placeholder": "",
      "options": [
        { "id": "r", "text": "Remotely" },
        { "id": "s", "text": "On Site" }
      ]
    },
    {
      "type": "select",
      "name": "country",
      "label": " Country",
      "placeholder": "Please choose your country",
      "options": [
        { "id": "1", "text": "Egypt" },
        { "id": "2", "text": "Germany" },
        { "id": "3", "text": "KSA", "isSelected": "true" }
      ]
    },
    {
      "type": "submit",
      "name": "submit",
      "label": " Save",
      "placeholder": "Type your Date of birth"
    }
  ]
}
